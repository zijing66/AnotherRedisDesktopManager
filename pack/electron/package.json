{
  "name": "another-redis-desktop-manager",
  "version": "1.5.1",
  "description": "A faster, better and more stable redis desktop manager.",
  "author": "Another",
  "private": true,
  "main": "electron-main.js",
  "dependencies": {
    "electron-updater": "4.3.8",
    "font-list": "^1.4.5"
  },
  "repository": "github:qishibo/AnotherRedisDesktopManager",
  "build": {
    "appId": "me.qii404.another-redis-desktop-manager",
    "productName": "Another Redis Desktop Manager",
    "artifactName": "${productName}.${version}.${ext}",
    "copyright": "Copyright Â© 2022 qii404.me",
    "asar": true,
    "directories": {
      "output": "build-apps",
      "buildResources": "./"
    },
    "electronVersion": "11.4.9",
    "files": [
      "!static/js/*.map",
      "!static/css/*.map",
      "!*.map"
    ],
    "publish": [{
      "provider": "github",
      "owner": "qishibo",
      "repo": "AnotherRedisDesktopManager",
      "releaseType": "prerelease"
    }],
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "menuCategory": true,
      "allowElevation": false
    },
    "linux": {
      "icon": "icons/icon.png",
      "category": "Utility",
      "target": [
        "AppImage"
      ]
    },
    "snap": {
      "plugs": ["default", "ssh-keys"]
    },
    "mac": {
      "icon": "icons/icon.png",
      "type": "development",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "extendInfo": {
        "ElectronTeamID": "68JN8DV835"
      }
    }
  }
}
